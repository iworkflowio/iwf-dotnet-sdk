<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Exe</OutputType> <!--also an executable for testing-->
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>IwfDotnetSdk</PackageId>
    <Version>0.1.0</Version>
    <Authors>Indeed Workflow Framework</Authors>
    <Company>Indeed</Company>
    <Description>A .NET SDK for the Indeed Workflow Framework</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/indeedeng/iwf-dotnet-sdk</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\IwfDotnetSdk.ApiClients\IwfDotnetSdk.ApiClients.csproj" />
  </ItemGroup>

</Project>